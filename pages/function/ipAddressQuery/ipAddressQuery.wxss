#inputView {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}

#idIpAddress {
  width: 80%;
  margin-left: 10rpx;
  background: #eee;
  border-radius: 20rpx;
}

#submitButton {
  width: 80%;
  height: 94rpx;
  top: 30rpx;
  margin-bottom: 50rpx;
  color: rgba(255, 255, 255, 1);
  background-color: rgba(26, 173, 25, 1);
  box-shadow: 2rpx solid rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
  font-size: 38rpx;
  line-height: 150%;
}

#resView{
  display: flex;
  flex-direction: column;
}

.resTView{
  border-style: solid;
  border-color: #c0c0c0;
  border-right-style: none;
  border-left-style: none;
  border-bottom-style: none;
}

.resBView{
  border-style: solid;
  border-color: #c0c0c0;
  border-right-style: none;
  border-left-style: none;
}

#text-content {
  align-items: center;
  margin-top: 15rpx;
}

.resText{
  margin-left: 100rpx;
}

.errorView{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.errorMessage{
  color: red;
}

